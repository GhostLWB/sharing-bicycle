<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444F5A">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="#26c0ff"/>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="420dip"
        android:orientation="vertical"

        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/help_content_title"
        android:layout_marginTop="40dip">


        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chart_tab"
            android:background="#26c0ff"
            app:tabIndicatorColor="#ffffff"
            app:tabTextColor="#ffffff"
            app:tabSelectedTextColor="#fc4e9a"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/chart_pager"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="40dp">

        </android.support.v4.view.ViewPager>

    </LinearLayout>
    <ImageView
        android:layout_width="35dip"
        android:layout_height="26dip"
        android:id="@+id/login_back_image"
        android:background="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dip"
        android:layout_marginStart="12dip"/>

    <ImageButton
        android:layout_width="60dip"
        android:layout_height="50dip"
        android:id="@+id/analysis_back_button"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chart_count_trip"
        android:textSize="23sp"
        android:textColor="#ffffff"
        android:id="@+id/help_content_title"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/login_back_image"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:id="@+id/imageView18"
        android:background="@drawable/buttum"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

</FrameLayout>