<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#26c0ff"/>
    <ImageView
        android:layout_width="35dip"
        android:layout_height="26dip"
        android:id="@+id/login_back_image"
        android:background="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dip"
        android:layout_marginStart="12dip"/>

    <ImageButton
        android:layout_width="60dip"
        android:layout_height="50dip"
        android:id="@+id/credit_back_button"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credit_record_title"
        android:textSize="23dip"
        android:textColor="#ffffff"
        android:id="@+id/help_content_title"
        android:layout_alignBottom="@+id/help_content_back_button"
        android:layout_marginTop="12dip"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/id_swipe_ly_c"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/credit_listView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>