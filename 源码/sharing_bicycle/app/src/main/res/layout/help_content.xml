<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444F5A">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:id="@+id/imageView14"
        android:background="#26c0ff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="60dip"
        android:layout_height="50dip"
        android:id="@+id/help_content_back_button"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="35dip"
        android:layout_height="26dip"
        android:id="@+id/login_back_image"
        android:background="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dip"
        android:layout_marginStart="12dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help_title"
        android:textSize="23dip"
        android:textColor="#ffffff"
        android:id="@+id/help_content_title"
        android:layout_alignBottom="@+id/help_content_back_button"
        android:layout_marginBottom="8dip"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="160dip"
        android:id="@+id/imageView15"
        android:background="@drawable/buttum"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="260dip"
        android:layout_height="300dip"
        android:id="@+id/imageView16"
        android:background="@drawable/boder_help_content"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dip" />

    <ImageView
        android:layout_width="200dip"
        android:layout_height="2dip"
        android:id="@+id/imageView17"
        android:background="@drawable/help_content_line"
        android:layout_alignTop="@+id/imageView16"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:id="@+id/help_content_type"
        android:layout_alignBottom="@+id/imageView17"
        android:layout_marginBottom="5dip"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="200dip"
        android:layout_height="220dip"
        android:text="New Text"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:id="@+id/help_content"
        android:layout_alignTop="@+id/imageView17"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dip" />


</RelativeLayout>